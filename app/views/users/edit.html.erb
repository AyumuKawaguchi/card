<div class="sign_up-wrapper">
  <div class="signup-head">
    <h2>管理者編集画面</h2>
  </div>
  <div class="signup-box">

    <%= form_for(@user, url: user_path(@user), html: {method: "patch"}) do |f| %>
      <div class="field">
        <%= f.label :name,"氏名", class:"label" %><br />
        <%= f.text_field :username, placeholder: "氏名",class: "field-area", autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :email,"メールアドレス", class:"label" %><br />
        <%= f.email_field :email, placeholder: "メールアドレス", class: "field-area", autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :points, class:"label" %><br/>
        <%= f.number_field :points, class: "field-area" %><br/>
      </div>
      <div class="actions">
        <%= f.submit "修正する", class:"btn-action" %>
      </div>      
    <% end %> 
      <div class="delete-btn">
        <%= link_to '削除する',user_path(@user), method: :delete, class: "btn btn-action" %>
      </div>
    </div>
  </div>
</div>